{%- if content_for_header contains 'debutify' and settings.dbtfy_faq_page and section.blocks.size > 0 -%}
  <script src="{{ 'jquery-ui.min.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'jquery.ui.autocomplete.scroll.min.js' | asset_url }}" defer="defer"></script>

  <div id="FaqPage-{{section.id}}" class="fq-main
       {% if page.template_suffix != 'faq' %}
        {{ section.settings.section_style }}
       {% endif %}"
       data-section-id="{{ section.id }}"
       data-section-type="faq-page">

    {%- if page.template_suffix != 'faq' -%}
    <div class="box">
      <div class="wrapper">
        {%- unless section.settings.title == blank and section.settings.subtitle == blank -%}
        <div class="grid">
          <div class="grid__item large--eight-twelfths push--large--two-twelfths">
            <div class="section-header">
              {%- unless section.settings.title == blank -%}
                <h2 class="section-header__title">{{ section.settings.title | escape }}</h2>
              {%- endunless -%}
              {%- unless section.settings.subtitle == blank -%}
                <p class="section-header__subtitle">{{ section.settings.subtitle | escape }}</p>
              {%- endunless -%}
            </div>
           </div>
        </div>
        {%- endunless -%}
    {%- endif -%}

      {%- if section.settings.dbtfy_faq_searchbox -%}
      <div class="grid">
        <div class="grid__item large--four-twelfths push--large--four-twelfths text-center">
          <input type="text" class="input-full spacer-bottom" placeholder="{{ section.settings.dbtfy_faq_search_placeholder }}" id="FaqSearch-{{section.id}}">
        </div>
      </div>
      {%- endif -%}

      <div class="grid">
        <div class="grid__item large--eight-twelfths push--large--two-twelfths">
          {%- assign in_card_group = false -%}

          <!-- Blocks -->
          {%- for block in section.blocks -%}
            {%- if block.type == "category_block" -%}

              {%- if in_card_group -%}
              </div>
              {%- endif -%}

              {%- assign in_card_group = false -%}

              {%- unless block.settings.dbtfy_faq_category == blank -%}
                <h3 class="fp-category-title spacer-top-lg">
                  {%- unless block.settings.dbtfy_faq_icons == blank -%}
                    <span class="{{ settings.icon }} icon-width">{{ block.settings.dbtfy_faq_icons }}</span>
                  {%- endunless -%}

                  {{ block.settings.dbtfy_faq_category }}
                </h3>
              {%- endunless -%}
            {%- else -%}
              {%- unless in_card_group -%}
              <div class="card-group">
              {%- endunless -%}

              {%- assign in_card_group = true -%}

              <div class="card tab fp-item" data-question="{{ block.settings.title }}" {{ block.shopify_attributes }}>
                <button type="button" 
                id="tab-button-{{forloop.index}}{{ block.id }}"
                class="card-header tab-header tab-header-{{ block.id }} {% if block.settings.dbtfy_faq_page_open %} active{% endif %}"
                role="tab"        
                aria-controls="tab-content-{{forloop.index}}{{ block.id }}"                          
                {% if block.settings.dbtfy_faq_page_open %}aria-selected="true"{% else %}aria-selected="false"{% endif %}>
                  {%- unless block.settings.dbtfy_faq_page_icon == blank -%}
                  <span class="{{ settings.icon }} card-header-icon text-secondary">{{ block.settings.dbtfy_faq_page_icon }}</span>
                  {%- endunless -%}

                  {%- unless block.settings.title == blank -%}
                  <span class="tab-header-title">{{ block.settings.title }}</span>
                  {%- endunless -%}
                </button>

                <div class="card-body tab-body" id="tab-content-{{forloop.index}}{{ block.id }}" aria-labelledby="tab-button-{{forloop.index}}{{ block.id }}" role="tabpanel">
                  <div class="tab-content rte">
                    {{ block.settings.text }}
                  </div>
                </div>
              </div>

              {%- if forloop.last and in_card_group -%}
              </div>
              {%- endif -%}
            {%- endif -%}
          {%- endfor -%}

          {%- if section.settings.dbtfy_faq_bannerbox -%}
            <div class="fp-banner spacer-top-lg">
              <div class="card card-default text-center">
                <div class="card-body">
                  {%- unless section.settings.dbtfy_faq_banner_icon == blank -%}
                  <p>
                    <span class="{{ settings.icon }} icon-xl text-secondary icon-image">{{ section.settings.dbtfy_faq_banner_icon }}</span>
                  </p>
                  {%- endunless -%}

                  {%- unless section.settings.dbtfy_faq_banner_text == blank -%}
                    <h4>{{ section.settings.dbtfy_faq_banner_text }}</h4>
                  {%- endunless -%}

                  {%- unless section.settings.dbtfy_faq_banner_subtitle == blank -%}
                    <p>{{ section.settings.dbtfy_faq_banner_subtitle }}</p>
                  {%- endunless -%}

                  {%- unless section.settings.dbtfy_faq_btn == blank -%}
                    <a class="btn btn-outline-primary" href="{{ section.settings.dbtfy_faq_link }}">{{ section.settings.dbtfy_faq_btn }}</a>
                  {%- endunless -%}
                </div>
              </div>
            </div>
          {%- endif -%}
        </div>
      </div>
      
      {%- if page.template_suffix != 'faq' -%}
      </div>
    </div>
    {%- endif -%}
  </div>
{%- endif -%}

{% schema %}
  {
    "name": "⚡ FAQ",
    "class": "faq-section dbtfy dbtfy-faq_page",
    "max_blocks": 30,
    "settings": [
      {
        "type": "header",
        "content": "Help Center"
      },
      {
        "type": "paragraph",
        "content": "[Follow our step-by-step tutorial](https:\/\/help.debutify.com\/en\/articles\/5054110-how-to-display-a-new-f-a-q-page-in-3-0)"
      },
      {
        "type": "header",
        "content":"Home/Product page settings"
	    },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "FAQ"
      },
	    {
        "type": "text",
        "id": "subtitle",
        "label": "Subheading"
      },
      {
        "type": "select",
        "id": "section_style",
        "label": "Section style",
        "default": "section-border",
        "options": [
          {
            "value": "section-blank",
            "label": "Blank background"
          },
          {
            "value": "section-default",
            "label": "Accent background"
          },
          {
            "value": "section-border",
            "label": "Border top"
          }
        ]
      },
      {
        "type": "header",
        "content":"Search"
	    },
	    {
        "type": "checkbox",
        "id": "dbtfy_faq_searchbox",
        "label": "Show search",
        "default": true
      },
	    {
        "type": "text",
        "id": "dbtfy_faq_search_placeholder",
        "label":"Placeholder",
		    "default": "Search questions..."
      },
	    {
        "type": "header",
        "content":"Banner"
	    },
      {
        "type": "checkbox",
        "id": "dbtfy_faq_bannerbox",
        "label": "Show banner",
        "default": true
      },
      {
        "type": "text",
        "id": "dbtfy_faq_banner_icon",
        "label":"Banner icon",
        "default": "live_help",
        "info": "[View all available icons](https:\/\/material.io\/resources\/icons)"
      },
	    {
        "type": "text",
        "id": "dbtfy_faq_banner_text",
        "label":"Banner text",
		    "default": "Didn't find your answer?"
      },
      {
        "type": "text",
        "id": "dbtfy_faq_banner_subtitle",
        "label":"Banner text",
		    "default": "Our customer service will be happy to help you."
      },
      {
        "type": "text",
        "id": "dbtfy_faq_btn",
        "label":"Button label",
		    "default": "Get in Touch"
      },
      {
        "type": "url",
        "id": "dbtfy_faq_link",
        "label":"Button link"
      }
    ],
    "blocks" : [
      {
        "type": "category_block",
        "name": "Category",
        "settings": [
		      {
            "type": "header",
            "content":"Category"
     	    },
          {
            "type": "text",
            "id": "dbtfy_faq_category",
            "label":"Heading",
			      "default": "Category"
		      },
          {
            "type": "text",
            "id": "dbtfy_faq_icons",
            "label":"Icon",
			      "default": "support",
            "info": "[View all available icons](https:\/\/material.io\/resources\/icons)"
		      }
        ]
      },
	    {
        "type": "text_block",
        "name": "Question",
        "settings": [
		      {
            "type": "header",
            "content":"Question / Answer"
          },
          {
            "type": "checkbox",
            "id": "dbtfy_faq_page_open",
            "label":"Open by default",
            "default": false
          },
          {
            "type": "text",
            "id": "dbtfy_faq_page_icon",
            "label": "Icon",
            "info": "[View all available icons](https:\/\/material.io\/resources\/icons)"
          },
          {
            "type": "text",
            "id": "title",
            "label":"Question",
            "default": "Question"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Answer",
            "default":"<p>This is your answer.</p>"
          }
        ]
      }
    ],
    "presets":[
       {
          "name":"⚡ FAQ",
          "category":"Add-ons",
          "blocks": [
            {
              "type": "category_block"
            },
            {
              "type": "text_block"
            }
          ]
       }
    ]
  }
{% endschema %}
